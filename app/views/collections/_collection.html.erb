<div class="collection-wrapper left">

	<div class="collection-title">

		<%= link_to collection_path(collection) do %>

			<h5><%= collection.title %></h5>

		<% end %>

	</div>

	<div class="collection-links-wrapper">

		<ul>
			<% collection.links.reverse.first(3).each do |link| %>

				<li>

					<a href="<%= link.url %>" onclick="window.open(this.href); return false;" target="_blank">
						<%= link.description.downcase%> | <%= link.url.downcase %>
					</a>

				</li>

			<% end %>

		</ul>

	</div>

	<div class="collection-users-wrapper">


	</div>


</div>
