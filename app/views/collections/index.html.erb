<p id="notice" class="hidden"><%= notice %></p>

<!-- Listing Shared collections (the collections shared by others) -->
<% @being_shared_collections.each do |collection| %> 
            <%= link_to browse_path(collection) do%>
                <%= collection.title %>
            <% end %>
<% end %>

<%= render @collections %>

<div class="links-main-container">
	<% @links.each do |link| %>
		<%= render '/links/link' , link: link%>
	<% end %>
</div>

<div id="invitation_form" title="Invite others to share" style="display:none"> 
    <%= form_tag('/collection/share' ) do %> 
            <label for="email_addresses">Enter recipient email addresses here</label><br /> 
            <%= text_field_tag('email_addresses', "", :class => 'text ui-widget-content ui-corner-all') %> 
            <br /><br /> 
            <label for="message">Optional message</label><br /> 
            <%= text_area_tag( 'message',"",  :class => 'text ui-widget-content ui-corner-all' )%> 
            <%= hidden_field_tag "collection_id" %> 
    <% end %>                 
</div>

