<%= form_for(@link) do |f| %>
	<% if @link.errors.any? %>

		<div id="error_explanation">

			<h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

			<ul>
				<% @link.errors.full_messages.each do |message| %>

					<li><%= message %></li>

				<% end %>

			</ul>

		</div>

	<% end %>

	<div class="field">
		<%= f.label :url %><br>
		<%= f.text_field :url %>
	</div>

	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	</div>

	<div class="field">
		<%= f.label :image_url %><br>
		<%= f.text_field :image_url %>
	</div>

	<div class="field checkbox-field">
		<%= f.collection_check_boxes( :collection_ids, Collection.where(creator_id: current_user.id).all, :id, :title)  do |b| %> 
			<%= b.check_box(class: 'check_box') %>
			<%= b.label(class: "checkbox_label") %>
		<% end %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>
