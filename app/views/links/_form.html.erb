<%= provide(:title, "New Link" ) %>
<div class="outer-form">

	<%= form_for(@link) do |f| %>

		<% if @link.errors.any? %>

			<div id="error_explanation" class="error-form">

				<ul>
					<% @link.errors.full_messages.each do |message| %>

						<li><%= message %></li>

					<% end %>

				</ul>

			</div>

		<% end %>

		<div class="field-row">
			<%= f.text_field :url , placeholder: "Copy the url here ... https://www.example.com" , autofocus: true %>
		</div>

		<div class="field-row">
			<%= f.text_field :description, placeholder: "Description goes here"  %>
		</div>

		<%= f.hidden_field :collection_id %> 

		<div class="form-actions">
			<%= f.button "add link", type: 'submit', class: "form-submit-button", data: { disable_with: 'Submitting' } %>
		</div>



	<% end %>

</div>
