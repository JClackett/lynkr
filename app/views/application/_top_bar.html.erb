<header class="top-bar right">

	<div class="top-section">

		<div class="search-wrapper">

				<i class="fa fa-search search-icon"></i>

				<form action="<%= root_path %>" method="get" class="search-form" >

					<%= text_field_tag :q, params[:s], placeholder: "Search", class: "search-input"%>
					<%= submit_tag "Search", :style => "display: none;", :name  => nil %>

				</form>

		</div>
	
		<div class="login-section right">


		           <div class="current-user" >

		           	<div class="user-initials">
		           		<!-- Need to make Users Controller -->
		           	</div>

		           	<%= gravatar_image_tag(current_user.email.gsub('spam', 'mdeering'), :alt => current_user.first_name) %>
		           </div>

		           <div class="user-popup">

		                     	<%= link_to 'logout', destroy_user_session_path, method: :delete %>

		            </div>	

		</div>
	
	</div>

	
	<div class="bottom-section">
	
		<div class="section-header">


				<% if @current_collection %>

						<h3><%= best_in_place @current_collection, :title, :as => :input , :class => "best_in_place_title" %></h3>

						<%= link_to @current_collection, :method => :delete, :confirm => "Are you sure?", class: "delete-collection"  do %>
							<i class="fa fa-trash-o"></i>
						<% end %>

						<%= link_to "#", :collection_id => @current_collection.id, :collection_title => @current_collection.title , class: "share-collection" do %>
							<i class="fa fa-share-alt"></i>
						<% end %>
						<div class="shared-icon">
							<% current_shared_collection = SharedCollection.where(:collection_id => @current_collection.id) %>
							<% current_shared_collection.each do |shared_with| %>
								<% user_ids = shared_with.shared_users_id %>
								<% User.where(:id => user_ids).each do |shared_user|  %>
									<a title="<%=shared_user.first_name%>" class="tooltip"><%= gravatar_image_tag(shared_user.email.gsub('spam', 'mdeering'), :alt => shared_user.first_name, class: "shared-user-icon") %></a>
								<% end %>
							<% end %> 


						</div>
				<% else %>

					<h3><%= @bottom_bar_header %></h3>

				<% end %>

		</div>
	
	</div>

</header>

